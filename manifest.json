{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "Browse Assist",
  "description": "This is a Chrome extension built with React and TypeScript",
  "action": {
    "default_title": "Browse Assist"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "options_ui": {
    "page": "js/options.html",
    "open_in_tab": true
  },
  "permissions": ["storage"],
  "host_permissions": ["https://openrouter.ai/*"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/content.js"],
      "run_at": "document_idle"
    }
  ]
}
