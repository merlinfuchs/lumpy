{
  "version": "1.1.0",
  "manifest_version": 3,
  "name": "Lumpy",
  "description": "Lumpy is a helpful little princess that helps you browse the web. She's a bit of a know-it-all, but she's always willing to help.",
  "icons": {
    "16": "static/icon16.png",
    "32": "static/icon32.png",
    "48": "static/icon48.png",
    "128": "static/icon128.png",
    "256": "static/icon256.png",
    "512": "static/icon512.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "lumpy@merlin.gg",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["websiteContent", "authenticationInfo"]
      }
    }
  },
  "action": {
    "default_title": "Lumpy"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "options_ui": {
    "page": "js/options.html",
    "open_in_tab": true
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://openrouter.ai/*"],
  "web_accessible_resources": [
    {
      "resources": ["static/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "run-prompt-1": {
      "description": "Run prompt slot 01",
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      }
    },
    "run-prompt-2": { "description": "Run prompt slot 02" },
    "run-prompt-3": { "description": "Run prompt slot 03" },
    "run-prompt-4": { "description": "Run prompt slot 04" },
    "run-prompt-5": { "description": "Run prompt slot 05" },
    "run-prompt-6": { "description": "Run prompt slot 06" },
    "run-prompt-7": { "description": "Run prompt slot 07" },
    "run-prompt-8": { "description": "Run prompt slot 8" },
    "run-prompt-9": { "description": "Run prompt slot 09" },
    "run-prompt-10": { "description": "Run prompt slot 10" }
  }
}
